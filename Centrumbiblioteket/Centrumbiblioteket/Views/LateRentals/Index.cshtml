@model IEnumerable<Centrumbiblioteket.Models.Rental>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers

@{
    ViewData["Title"] = "Index";
}
<head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
</head>
<h1>Försenade inlämningar</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                Förnamn
            </th>
            <th>
                Efternamn
            </th>
            <th>
                Telefonnummer
            </th>
            <th>
                Boktitel
            </th>
            <th>
                Utlåningsdatum
            </th>
            <th>
                Inlämningsdatum
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Customer.CustomerFirstName
                </td>
                <td>
                    @item.Customer.CustomerLastName
                </td>
                <td>
                    @item.Customer.TelephoneNumber
                </td>
                <td>
                    @item.Inventory.Book.Title
                </td>
                <td>
                    @item.RentalDate
                </td>
                <td>
                    @item.ReturnDate
                </td>
                <td>
                    <a asp-action="Delete" asp-route-id="@item.RentalId" class="btn btn-primary">Radera</a>
                </td>
            </tr>
        }
    </tbody>
</table>
